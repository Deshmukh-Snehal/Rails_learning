<%= form_for :calculate, url: { action: :new }, method: :post do |f|   %>
  <%= text_field_tag :a, params[:a] %>
  <%= select_tag :operation, options_for_select([['+', :sum], ['-',    :subtr], ['*', :multipl],['/',  :divs]], params[:operation]) %>
  <%= text_field_tag :b, params[:b] %>
  <%= f.submit 'Calculate!' %>
  <%= @result %>
<% end %>