<%= form_with(model: player, local: true) do |form| %>
  <% if player.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% player.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control"%>
    
  </div>

  <div class="field form-group">
    <%= form.label :states %>
    <%= form.text_field :states, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city, class:"form-control"%>
  </div>

  <div class="field form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :Birth_Date %>
    <%= form.date_field :dob, data:{ provide:'datepicker' }, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :age %>
    <%= form.text_field :age %>
  </div>

  <div class="field form-group">
    <%= form.label "Gender" %>
    male<%= form.radio_button :radiobutton, ['male']%>
    female<%= form.radio_button :radiobutton, ['female']%>
  </div>

  <div class="field form-group">
    <%= form.label "Sports" %>
    <%= form.collection_select(:sport_id, Sport.all, :id, :name, { :prompt => 'Select a Sport', :selected => @player.sport_id }, { class: 'form-control' }) %>
  </div>

  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
