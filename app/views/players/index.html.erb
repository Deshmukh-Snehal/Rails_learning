<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>States</th>
      <th>City</th>
      <th>Email</th>
      <th>Birth date</th>
      <th>Age</th>
      <th>Sports</th>
      <th>Gender</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.name %></td>
        <td><%= player.states %></td>
        <td><%= player.city %></td>
        <td><%= player.email %></td>
        <td><%= player.dob %></td>
        <td><%= player.age %></td>
        <td><%= player.sport.name %></td>
        <td><%= player.radiobutton %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

