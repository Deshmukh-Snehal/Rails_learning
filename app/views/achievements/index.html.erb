<p id="notice"><%= notice %></p>

<h1>Achievements</h1>

<table>
  <thead>
    <tr>
      <th>Medal name</th>
      <th>Total medals</th>
      <th>Country</th>
      <th>Player Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.medal_name %></td>
        <td><%= achievement.total_medals %></td>
        <td><%= achievement.country %></td>
        <td><%= achievement.player.name %></td>
        <td><%= link_to 'Show', achievement %></td>
        <td><%= link_to 'Edit', edit_achievement_path(achievement) %></td>
        <td><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Achievement', new_achievement_path %>
